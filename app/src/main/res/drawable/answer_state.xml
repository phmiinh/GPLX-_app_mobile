<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/ripple_secondary">
    <item>
        <selector>
            <item android:state_checked="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/answer_selected_light"/>
                    <corners android:radius="@dimen/corner_radius_medium"/>
                    <stroke android:width="2dp" android:color="@color/answer_selected"/>
                </shape>
            </item>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/answer_selected_light"/>
                    <corners android:radius="@dimen/corner_radius_medium"/>
                    <stroke android:width="1dp" android:color="@color/answer_selected"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/card_background"/>
                    <corners android:radius="@dimen/corner_radius_medium"/>
                    <stroke android:width="1dp" android:color="@color/light_gray"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>

