<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/ripple_outline">
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent"/>
                    <corners android:radius="12dp"/>
                    <stroke android:width="1dp" android:color="@color/button_outline_stroke_disabled"/>
                </shape>
            </item>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/ocean_cream"/>
                    <corners android:radius="12dp"/>
                    <stroke android:width="1dp" android:color="@color/button_outline_stroke"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent"/>
                    <corners android:radius="12dp"/>
                    <stroke android:width="1dp" android:color="@color/button_outline_stroke"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>

